{%- render 'main-collection' with section as section -%}

{%- comment -%} schematic writeCodeShort {%- endcomment -%}
{% schema %}
{
  "name": "Main Collection Section",
  "tag": "section",
  "class": "section-main-collection",
  "presets": [
    {
      "name": "Main Collection Section"
    }
  ],
  "enabled_on": {
    "templates": [
      "collection"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "Quick View"
    },
    {
      "type": "checkbox",
      "id": "enable_quick_view",
      "label": "Enable Quick View",
      "default": true,
      "info": "Add quick view button to product cards"
    },
    {
      "type": "checkbox",
      "id": "quick_view_show_description",
      "label": "Show Product Description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "quick_view_show_full_details",
      "label": "Show Full Product Details",
      "default": false,
      "info": "Include additional product information and collapsible blocks"
    }
  ]
}
{% endschema %}