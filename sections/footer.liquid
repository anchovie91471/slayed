    <div class="container mx-auto">
        <div>
            {% for link in linklists.footer.links %}
                <a href="{{ link.url }}">
                    {{ link.title }}
                </a>
            {% endfor %}
        </div>

        <small>
            &copy; {{ "now" | date: "%Y" }} VAST Starter Theme
        </small>
    </div>
</div>
