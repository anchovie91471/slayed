                </div>

                <div>
                  <label for="AddressZipNew" class="block text-sm font-medium text-gray-700 mb-1">
                    {{ 'customer.addresses.zip' | t }}
                  </label>
                  <input
                    type="text"
                    id="AddressZipNew"
                    name="address[zip]"
                    value="{{ form.zip }}"
                    autocapitalize="characters"
                    autocomplete="postal-code"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-colors"
                  >
                </div>

                <div>
                  <label for="AddressCountryNew" class="block text-sm font-medium text-gray-700 mb-1">
                    {{ 'customer.addresses.country' | t }}
                  </label>
                  <select
                    id="AddressCountryNew"
                    name="address[country]"
                    data-default="{{ form.country }}"
                    autocomplete="country"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-colors bg-white"
