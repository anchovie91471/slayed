        <div class="flex items-center justify-between mb-4">
          <h1 class="text-3xl font-bold text-gray-900">{{ 'customer.addresses.title' | t }}</h1>
          <a
            href="{{ routes.account_url }}"
            class="text-blue-600 hover:text-blue-600 focus:outline-none focus:underline transition-colors"
          >
            {{ 'customer.account.return' | t }}
          </a>
        </div>

        {%- comment -%} Add New Address Button {%- endcomment -%}
        <div x-data="{ showForm: false }" class="mb-8">
          <button
