<div class="bg-white px-6 md:px-8 py-12">
    <div class="container mx-auto max-w-md">

        <header class="mb-8">
            <h1 class="mb-2 text-center">
                {{ 'customer.reset_password.title' | t }}
            </h1>
            <p class="text-center text-gray-600">
                {{ 'customer.reset_password.subtext' | t: email: email }}
            </p>
        </header>

        {%- form 'reset_customer_password', class: 'space-y-4' -%}
            {%- if form.errors -%}
                <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg" role="alert">
                    <div class="flex items-center mb-2">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 13 13">
                            <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                            <circle cx="6.5" cy="6.5" r="5.5" fill="currentColor" stroke="currentColor" stroke-width="0.7"/>
                            <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                        </svg>
                        <p class="font-medium">{{ 'templates.contact.form.error_heading' | t }}</p>
                    </div>
                    <ul class="text-sm list-disc list-inside">
                        {%- for field in form.errors -%}
                            <li>
                                {%- if field == 'form' -%}
                                    {{ form.errors.messages[field] }}
                                {%- else -%}
                                    {{ form.errors.translated_fields[field] | capitalize }}
                                    {{ form.errors.messages[field] }}
                                {%- endif -%}
                            </li>
                        {%- endfor -%}
                    </ul>
                </div>
            {%- endif -%}

            <div>
                <label for="password" class="block mb-2 text-sm font-medium text-gray-900">
                    {{ 'customer.reset_password.password' | t }}
                </label>
                <input
                        type="password"
                        name="customer[password]"
                        id="password"
                        autocomplete="new-password"
                        placeholder="{{ 'customer.reset_password.password' | t }}"
                        class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 {% if form.errors contains 'password' %}border-red-500{% endif %}"
                        {% if form.errors contains 'password' %}
                            aria-invalid="true"
                            aria-describedby="password-error"
                        {% endif %}
                        required>
                {%- if form.errors contains 'password' -%}
                    <p id="password-error" class="mt-2 text-sm text-red-600">
                        {{ form.errors.translated_fields['password'] | capitalize }} {{ form.errors.messages['password'] }}
                    </p>
                {%- endif -%}
            </div>

            <div>
                <label for="password_confirmation" class="block mb-2 text-sm font-medium text-gray-900">
                    {{ 'customer.reset_password.password_confirm' | t }}
                </label>
                <input
                        type="password"
                        name="customer[password_confirmation]"
                        id="password_confirmation"
                        autocomplete="new-password"
                        placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
                        class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 {% if form.errors contains 'password_confirmation' %}border-red-500{% endif %}"
                        {% if form.errors contains 'password_confirmation' %}
                            aria-invalid="true"
                            aria-describedby="password_confirmation-error"
                        {% endif %}
                        required>
                {%- if form.errors contains 'password_confirmation' -%}
                    <p id="password_confirmation-error" class="mt-2 text-sm text-red-600">
                        {{ form.errors.translated_fields['password_confirmation'] | capitalize }} {{ form.errors.messages['password_confirmation'] }}
                    </p>
                {%- endif -%}
            </div>

            <button
                    type="submit"
                    class="w-full py-3 px-5 text-sm font-medium text-center text-white rounded-lg bg-blue-500 hover:bg-indigo-500 focus:ring-4 focus:outline-none focus:ring-blue-300">
                {{ 'customer.reset_password.submit' | t }}
            </button>
        {%- endform -%}

    </div>
</div>

