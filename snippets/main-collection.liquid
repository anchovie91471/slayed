{%- render 'breadcrumbs' -%}

<div class="px-6 md:px-8 py-12" x-data="collectionFilters" data-active-filters-count="{{ collection.filters | map: 'active_values' | sum: 'size' | default: 0 }}">
    <div class="container mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 text-center mb-8">
            {{ collection.title }}
        </h1>
        {% if collection.description != blank %}
            <div class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
                {{ collection.description }}
            </div>
        {% endif %}

        {%- paginate collection.products by 12 -%}
            {%- comment -%} Mobile Filter Toggle Button {%- endcomment -%}
            {%- if collection.filters.size > 0 -%}
                <div class="lg:hidden mb-6">
                    <button
                        @click="mobileFiltersOpen = true"
                        type="button"
                        class="w-full flex items-center justify-center gap-2 px-4 py-3 bg-white text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-400 transition-colors"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                        </svg>
                        <span class="font-medium">Filters</span>
                        <span x-show="activeFiltersCount > 0" x-text="`(${activeFiltersCount})`" class="text-blue-600"></span>
                    </button>
                </div>
            {%- endif -%}

            <div class="lg:grid lg:grid-cols-4 lg:gap-8">
                {%- comment -%} Filter Sidebar (Desktop) {%- endcomment -%}
                {%- if collection.filters.size > 0 -%}
                    <aside class="hidden lg:block lg:col-span-1">
                        <div class="sticky top-4">
                            <div class="flex items-center justify-between mb-6">
                                <h2 class="text-lg font-semibold text-gray-900">Filters</h2>
                                <button
                                    @click="clearAllFilters()"
                                    x-show="activeFiltersCount > 0"
                                    type="button"
                                    class="text-sm text-blue-600 hover:text-blue-600 focus:outline-none focus:underline"
                                >
                                    Clear all
                                </button>
                            </div>

                            {%- for filter in collection.filters -%}
                                <div class="mb-6 pb-6 border-b border-gray-200 last:border-b-0" x-data="{ expanded: {{ forloop.index0 | at_most: 2 | at_least: 0 }} < 3 }">
                                    <button
                                        @click="expanded = !expanded"
                                        type="button"
                                        class="w-full flex items-center justify-between text-left py-2 text-sm font-medium text-gray-900 hover:text-gray-700 focus:outline-none"
                                    >
                                        <span>{{ filter.label }}</span>
                                        <svg class="w-5 h-5 transition-transform duration-200" :class="{ 'rotate-180': expanded }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                        </svg>
                                    </button>

                                    <div x-show="expanded" x-collapse>
                                        <div class="mt-4 space-y-3">
                                            {%- case filter.type -%}
                                                {%- when 'list' -%}
                                                    {%- for value in filter.values -%}
                                                        <label class="flex items-center gap-3 cursor-pointer group">
                                                            <input
                                                                type="checkbox"
                                                                value="{{ value.value }}"
                                                                {% if value.active %}checked{% endif %}
                                                                @change="toggleFilter('{{ filter.param_name }}', '{{ value.value }}')"
                                                                class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-400 focus:ring-offset-0 cursor-pointer"
                                                            >
                                                            <span class="text-sm text-gray-700 group-hover:text-gray-900">
                                                                {{ value.label }}
                                                                <span class="text-gray-500">({{ value.count }})</span>
                                                            </span>
                                                        </label>
                                                    {%- endfor -%}

                                                {%- when 'price_range' -%}
                                                    <div class="space-y-3">
                                                        <div>
                                                            <label for="filter-price-min-{{ filter.param_name }}" class="block text-xs text-gray-600 mb-1">Min Price</label>
                                                            <input
                                                                type="number"
                                                                id="filter-price-min-{{ filter.param_name }}"
                                                                min="0"
                                                                max="{{ filter.range_max | divided_by: 100 }}"
                                                                step="1"
                                                                value="{{ filter.min_value.value | divided_by: 100 }}"
                                                                @change="updatePriceFilter('{{ filter.param_name }}', 'min', $event.target.value)"
                                                                placeholder="0"
                                                                class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                                                            >
                                                        </div>
                                                        <div>
                                                            <label for="filter-price-max-{{ filter.param_name }}" class="block text-xs text-gray-600 mb-1">Max Price</label>
                                                            <input
                                                                type="number"
                                                                id="filter-price-max-{{ filter.param_name }}"
                                                                min="0"
                                                                max="{{ filter.range_max | divided_by: 100 }}"
                                                                step="1"
                                                                value="{{ filter.max_value.value | divided_by: 100 }}"
                                                                @change="updatePriceFilter('{{ filter.param_name }}', 'max', $event.target.value)"
                                                                placeholder="{{ filter.range_max | divided_by: 100 }}"
                                                                class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                                                            >
                                                        </div>
                                                    </div>
                                            {%- endcase -%}
                                        </div>
                                    </div>
                                </div>
                            {%- endfor -%}
                        </div>
                    </aside>
                {%- endif -%}

                {%- comment -%} Main Content Area {%- endcomment -%}
                <div class="lg:col-span-3">
                    {%- comment -%} Active Filters {%- endcomment -%}
                    {%- assign active_filters_count = 0 -%}
                    {%- for filter in collection.filters -%}
                        {%- if filter.active_values.size > 0 -%}
                            {%- assign active_filters_count = active_filters_count | plus: filter.active_values.size -%}
                        {%- endif -%}
                    {%- endfor -%}

                    {%- if active_filters_count > 0 -%}
                        <div class="mb-6 pb-4 border-b border-gray-200">
                            <div class="flex flex-wrap items-center gap-2">
                                <span class="text-sm font-medium text-gray-700">Active filters:</span>
                                {%- for filter in collection.filters -%}
                                    {%- for value in filter.active_values -%}
                                        <button
                                            @click="removeFilter('{{ filter.param_name }}', '{{ value.value }}')"
                                            type="button"
                                            class="inline-flex items-center gap-2 px-3 py-1 bg-blue-600 text-white text-sm rounded-full hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 transition-colors group"
                                        >
                                            <span class="text-white">{{ value.label }}</span>
                                            <svg class="w-4 h-4 text-white group-hover:opacity-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                            </svg>
                                        </button>
                                    {%- endfor -%}
                                {%- endfor -%}
                                <button
                                    @click="clearAllFilters()"
                                    type="button"
                                    class="text-sm text-gray-500 hover:text-gray-700 underline focus:outline-none"
                                >
                                    Clear all
                                </button>
                            </div>
                        </div>
                    {%- endif -%}

                    {%- comment -%} Toolbar - Sort and Results Count {%- endcomment -%}
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8 pb-6 border-b border-gray-200">
                        <div class="text-sm text-gray-600">
                            {% if collection.products_count > 0 %}
                                Showing
                                <span class="font-medium text-gray-900">{{ paginate.current_offset | plus: 1 }}-{{ paginate.current_offset | plus: paginate.page_size | at_most: collection.products_count }}</span>
                                of
                                <span class="font-medium text-gray-900">{{ collection.products_count }}</span>
                                {% if collection.products_count == 1 %}product{% else %}products{% endif %}
                            {% else %}
                                No products found
                            {% endif %}
                        </div>

                        {%- if collection.products_count > 0 -%}
                            <div x-data="collectionSort" data-current-sort="{{ collection.sort_by | default: collection.default_sort_by }}" data-default-sort="{{ collection.default_sort_by }}">
                                <label for="sort-by" class="sr-only">Sort by</label>
                                <select
                                    id="sort-by"
                                    x-model="sortBy"
                                    @change="updateSort()"
                                    class="px-4 py-2 pr-10 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-colors bg-white"
                                >
                                    {%- for option in collection.sort_options -%}
                                        <option value="{{ option.value }}" {% if option.value == collection.sort_by %}selected{% endif %}>
                                            {{ option.name }}
                                        </option>
                                    {%- endfor -%}
                                </select>
                            </div>
                        {%- endif -%}
                    </div>

                    {%- comment -%} Product Grid {%- endcomment -%}
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for prod in collection.products %}
                            {% render 'product-grid-item',
                                prod: prod,
                                enable_quick_view: section.settings.enable_quick_view,
                                quick_view_settings: section.settings,
                                prefetch_enabled: forloop.index <= 3 %}
                        {% endfor %}
                    </div>

                    {%- comment -%} Empty State {%- endcomment -%}
                    {%- if collection.products.size == 0 -%}
                        <div class="text-center py-12">
                            <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">No products found</h3>
                            <p class="text-gray-600 mb-6">Try adjusting your filters to find what you're looking for</p>
                            {%- if active_filters_count > 0 -%}
                                <button
                                    @click="clearAllFilters()"
                                    type="button"
                                    class="inline-flex items-center justify-center px-6 py-3 bg-gray-900 text-white font-medium rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors"
                                >
                                    Clear all filters
                                </button>
                            {%- endif -%}
                        </div>
                    {%- endif -%}

                    {% render 'pagination-navigation', paginate: paginate %}
                </div>
            </div>
        {% endpaginate %}
    </div>

    {%- comment -%} Mobile Filter Drawer {%- endcomment -%}
    {%- if collection.filters.size > 0 -%}
        <div
            x-show="mobileFiltersOpen"
            x-cloak
            @keydown.escape.window="mobileFiltersOpen = false"
            class="fixed inset-0 z-50 lg:hidden"
        >
            {%- comment -%} Backdrop {%- endcomment -%}
            <div
                x-show="mobileFiltersOpen"
                x-transition:enter="transition-opacity ease-out duration-200"
                x-transition:enter-start="opacity-0"
                x-transition:enter-end="opacity-100"
                x-transition:leave="transition-opacity ease-in duration-150"
                x-transition:leave-start="opacity-100"
                x-transition:leave-end="opacity-0"
                @click="mobileFiltersOpen = false"
                class="absolute inset-0 bg-black bg-opacity-50"
            ></div>

            {%- comment -%} Drawer {%- endcomment -%}
            <div
                x-show="mobileFiltersOpen"
                x-transition:enter="transition-transform ease-out duration-300"
                x-transition:enter-start="translate-x-full"
                x-transition:enter-end="translate-x-0"
                x-transition:leave="transition-transform ease-in duration-200"
                x-transition:leave-start="translate-x-0"
                x-transition:leave-end="translate-x-full"
                class="absolute right-0 top-0 bottom-0 w-full max-w-md bg-white shadow-xl overflow-y-auto"
            >
                <div class="sticky top-0 z-10 bg-white border-b border-gray-200 px-6 py-4">
                    <div class="flex items-center justify-between">
                        <h2 class="text-lg font-semibold text-gray-900">Filters</h2>
                        <button
                            @click="mobileFiltersOpen = false"
                            type="button"
                            class="p-2 -mr-2 text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-400 rounded-lg"
                        >
                            <span class="sr-only">Close filters</span>
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                </div>

                <div class="px-6 py-6">
                    {%- for filter in collection.filters -%}
                        <div class="mb-6 pb-6 border-b border-gray-200 last:border-b-0" x-data="{ expanded: true }">
                            <button
                                @click="expanded = !expanded"
                                type="button"
                                class="w-full flex items-center justify-between text-left py-2 text-sm font-medium text-gray-900 hover:text-gray-700 focus:outline-none"
                            >
                                <span>{{ filter.label }}</span>
                                <svg class="w-5 h-5 transition-transform duration-200" :class="{ 'rotate-180': expanded }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>

                            <div x-show="expanded" x-collapse>
                                <div class="mt-4 space-y-3">
                                    {%- case filter.type -%}
                                        {%- when 'list' -%}
                                            {%- for value in filter.values -%}
                                                <label class="flex items-center gap-3 cursor-pointer group">
                                                    <input
                                                        type="checkbox"
                                                        value="{{ value.value }}"
                                                        {% if value.active %}checked{% endif %}
                                                        @change="toggleFilter('{{ filter.param_name }}', '{{ value.value }}')"
                                                        class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-400 focus:ring-offset-0 cursor-pointer"
                                                    >
                                                    <span class="text-sm text-gray-700 group-hover:text-gray-900">
                                                        {{ value.label }}
                                                        <span class="text-gray-500">({{ value.count }})</span>
                                                    </span>
                                                </label>
                                            {%- endfor -%}

                                        {%- when 'price_range' -%}
                                            <div class="space-y-3">
                                                <div>
                                                    <label for="filter-price-min-mobile-{{ filter.param_name }}" class="block text-xs text-gray-600 mb-1">Min Price</label>
                                                    <input
                                                        type="number"
                                                        id="filter-price-min-mobile-{{ filter.param_name }}"
                                                        min="0"
                                                        max="{{ filter.range_max | divided_by: 100 }}"
                                                        step="1"
                                                        value="{{ filter.min_value.value | divided_by: 100 }}"
                                                        @change="updatePriceFilter('{{ filter.param_name }}', 'min', $event.target.value)"
                                                        placeholder="0"
                                                        class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                                                    >
                                                </div>
                                                <div>
                                                    <label for="filter-price-max-mobile-{{ filter.param_name }}" class="block text-xs text-gray-600 mb-1">Max Price</label>
                                                    <input
                                                        type="number"
                                                        id="filter-price-max-mobile-{{ filter.param_name }}"
                                                        min="0"
                                                        max="{{ filter.range_max | divided_by: 100 }}"
                                                        step="1"
                                                        value="{{ filter.max_value.value | divided_by: 100 }}"
                                                        @change="updatePriceFilter('{{ filter.param_name }}', 'max', $event.target.value)"
                                                        placeholder="{{ filter.range_max | divided_by: 100 }}"
                                                        class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                                                    >
                                                </div>
                                            </div>
                                    {%- endcase -%}
                                </div>
                            </div>
                        </div>
                    {%- endfor -%}
                </div>

                <div class="sticky bottom-0 bg-white border-t border-gray-200 px-6 py-4">
                    <div class="flex gap-3">
                        <button
                            @click="clearAllFilters()"
                            type="button"
                            class="flex-1 px-6 py-3 bg-white text-gray-900 border border-gray-300 font-medium rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors"
                        >
                            Clear all
                        </button>
                        <button
                            @click="mobileFiltersOpen = false"
                            type="button"
                            class="flex-1 px-6 py-3 bg-gray-900 text-white font-medium rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors"
                        >
                            Apply filters
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {%- endif -%}
</div>

{%- comment -%} Quick View Modal HTML {%- endcomment -%}
{% if section.settings.enable_quick_view %}
  <div x-data="quickViewModal"
       data-show-description="{% if section.settings.quick_view_show_description %}true{% else %}false{% endif %}"
       data-money-format="{{ shop.money_format | json | escape }}"
       x-show="isOpen"
       x-cloak
       @keydown.escape.window="close()"
       class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black bg-opacity-50">

    <div @click.self="close()" class="absolute inset-0"></div>

    <div class="relative bg-white max-w-4xl w-full max-h-[90vh] overflow-auto" @click.stop="">
      {%- comment -%} Close Button {%- endcomment -%}
      <button type="button"
              @click="close()"
              class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-400 z-10"
              aria-label="Close quick view">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      {%- comment -%} Loading State {%- endcomment -%}
      <div x-show="loading" class="flex items-center justify-center p-12">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-gray-900"></div>
      </div>

      {%- comment -%} Product Content {%- endcomment -%}
      <div x-show="!loading && product" class="md:flex">
        {%- comment -%} Product Image {%- endcomment -%}
        <div class="md:w-1/2 p-6">
          <div class="relative overflow-hidden bg-gray-100 aspect-square">
            <img x-ref="productImage"
                 src=""
                 alt=""
                 class="w-full h-full object-cover">
          </div>
        </div>

        {%- comment -%} Product Info {%- endcomment -%}
        <div class="md:w-1/2 p-6">
          <h2 x-text="product?.title" class="text-2xl font-bold text-gray-900 mb-2"></h2>

          {%- comment -%} Price {%- endcomment -%}
          <div class="mb-4">
            <span class="text-xl font-semibold text-gray-900" x-text="formatMoney(currentVariant?.price)"></span>
            <span x-show="currentVariant?.compare_at_price > currentVariant?.price"
                  class="text-sm text-gray-500 line-through ml-2"
                  x-text="formatMoney(currentVariant?.compare_at_price)"></span>
          </div>

          {%- comment -%} Description {%- endcomment -%}
          <template x-if="settings.quick_view_show_description">
            <div x-html="product?.description" class="prose prose-sm text-gray-700 mb-6 max-h-32 overflow-auto"></div>
          </template>

          {%- comment -%} Variant Options {%- endcomment -%}
          <template x-if="product?.options && product.options.length > 0">
            <div class="space-y-4 mb-6">
              <template x-for="(option, index) in product?.options" :key="index">
                <div>
                  <label class="block text-sm font-medium text-gray-900 mb-2" x-text="option.name"></label>
                  <select @change="handleOptionChange(option.name, $event.target.value)"
                          class="w-full border-gray-300 rounded-md focus:ring-blue-400 focus:border-blue-400">
                    <template x-for="value in option.values" :key="value">
                      <option :value="value"
                              :selected="selectedOptions[option.name] === value"
                              x-text="value"></option>
                    </template>
                  </select>
                </div>
              </template>
            </div>
          </template>

          {%- comment -%} Quantity {%- endcomment -%}
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-900 mb-2">Quantity</label>
            <div class="flex items-center border border-gray-300 w-fit">
              <button type="button"
                      @click="quantity = Math.max(1, quantity - 1)"
                      class="w-10 h-10 flex items-center justify-center hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-400">
                -
              </button>
              <input type="number"
                     x-model.number="quantity"
                     min="1"
                     class="w-16 text-center border-0 focus:ring-0 [appearance:textfield] [&::-webkit-inner-spin-button]:appearance-none [&::-webkit-outer-spin-button]:appearance-none">
              <button type="button"
                      @click="quantity++"
                      class="w-10 h-10 flex items-center justify-center hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-400">
                +
              </button>
            </div>
          </div>

          {%- comment -%} Add to Cart Button {%- endcomment -%}
          <button type="button"
                  @click="addToCart()"
                  :disabled="!currentVariant?.available || isAdding"
                  class="w-full bg-gray-900 text-white px-6 py-3 font-medium hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed">
            <span x-show="!isAdding">
              <span x-show="currentVariant?.available">Add to Cart</span>
              <span x-show="!currentVariant?.available">Sold Out</span>
            </span>
            <span x-show="isAdding">Adding to cart...</span>
          </button>

          {%- comment -%} View Full Details Link {%- endcomment -%}
          <a :href="`/products/${product?.handle}`"
             class="block text-center mt-4 text-sm text-blue-600 hover:text-blue-700 hover:underline focus:outline-none focus:ring-2 focus:ring-blue-400">
            View full details
          </a>
        </div>
      </div>
    </div>
  </div>
{% endif %}
