{%- render 'breadcrumbs' -%}

<div class="px-6 md:px-8 py-12" x-data="collectionFilters()">
    <div class="container mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 text-center mb-8">
            {{ collection.title }}
        </h1>
        {% if collection.description != blank %}
            <div class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
                {{ collection.description }}
            </div>
        {% endif %}

        {%- paginate collection.products by 12 -%}
            {%- comment -%} Mobile Filter Toggle Button {%- endcomment -%}
            {%- if collection.filters.size > 0 -%}
                <div class="lg:hidden mb-6">
                    <button
                        @click="mobileFiltersOpen = true"
                        type="button"
                        class="w-full flex items-center justify-center gap-2 px-4 py-3 bg-white text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-400 transition-colors"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                        </svg>
                        <span class="font-medium">Filters</span>
                        <span x-show="activeFiltersCount > 0" x-text="`(${activeFiltersCount})`" class="text-blue-500"></span>
                    </button>
                </div>
            {%- endif -%}

            <div class="lg:grid lg:grid-cols-4 lg:gap-8">
                {%- comment -%} Filter Sidebar (Desktop) {%- endcomment -%}
                {%- if collection.filters.size > 0 -%}
                    <aside class="hidden lg:block lg:col-span-1">
                        <div class="sticky top-4">
                            <div class="flex items-center justify-between mb-6">
                                <h2 class="text-lg font-semibold text-gray-900">Filters</h2>
                                <button
                                    @click="clearAllFilters()"
                                    x-show="activeFiltersCount > 0"
                                    type="button"
                                    class="text-sm text-blue-500 hover:text-blue-600 focus:outline-none focus:underline"
                                >
                                    Clear all
                                </button>
                            </div>

                            {%- for filter in collection.filters -%}
                                <div class="mb-6 pb-6 border-b border-gray-200 last:border-b-0" x-data="{ expanded: {{ forloop.index0 | at_most: 2 | at_least: 0 }} < 3 }">
                                    <button
                                        @click="expanded = !expanded"
                                        type="button"
                                        class="w-full flex items-center justify-between text-left py-2 text-sm font-medium text-gray-900 hover:text-gray-700 focus:outline-none"
                                    >
                                        <span>{{ filter.label }}</span>
                                        <svg class="w-5 h-5 transition-transform duration-200" :class="{ 'rotate-180': expanded }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                        </svg>
                                    </button>

                                    <div x-show="expanded" x-collapse>
                                        <div class="mt-4 space-y-3">
                                            {%- case filter.type -%}
                                                {%- when 'list' -%}
                                                    {%- for value in filter.values -%}
                                                        <label class="flex items-center gap-3 cursor-pointer group">
                                                            <input
                                                                type="checkbox"
                                                                value="{{ value.value }}"
                                                                {% if value.active %}checked{% endif %}
                                                                @change="toggleFilter('{{ filter.param_name }}', '{{ value.value }}')"
                                                                class="w-4 h-4 text-blue-500 border-gray-300 rounded focus:ring-2 focus:ring-blue-400 focus:ring-offset-0 cursor-pointer"
                                                            >
                                                            <span class="text-sm text-gray-700 group-hover:text-gray-900">
                                                                {{ value.label }}
                                                                <span class="text-gray-500">({{ value.count }})</span>
                                                            </span>
                                                        </label>
                                                    {%- endfor -%}

                                                {%- when 'price_range' -%}
                                                    <div class="space-y-3">
                                                        <div>
                                                            <label for="filter-price-min-{{ filter.param_name }}" class="block text-xs text-gray-600 mb-1">Min Price</label>
                                                            <input
                                                                type="number"
                                                                id="filter-price-min-{{ filter.param_name }}"
                                                                min="0"
                                                                max="{{ filter.range_max | divided_by: 100 }}"
                                                                step="1"
                                                                value="{{ filter.min_value.value | divided_by: 100 }}"
                                                                @change="updatePriceFilter('{{ filter.param_name }}', 'min', $event.target.value)"
                                                                placeholder="0"
                                                                class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                                                            >
                                                        </div>
                                                        <div>
                                                            <label for="filter-price-max-{{ filter.param_name }}" class="block text-xs text-gray-600 mb-1">Max Price</label>
                                                            <input
                                                                type="number"
                                                                id="filter-price-max-{{ filter.param_name }}"
                                                                min="0"
                                                                max="{{ filter.range_max | divided_by: 100 }}"
                                                                step="1"
                                                                value="{{ filter.max_value.value | divided_by: 100 }}"
                                                                @change="updatePriceFilter('{{ filter.param_name }}', 'max', $event.target.value)"
                                                                placeholder="{{ filter.range_max | divided_by: 100 }}"
                                                                class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                                                            >
                                                        </div>
                                                    </div>
                                            {%- endcase -%}
                                        </div>
                                    </div>
                                </div>
                            {%- endfor -%}
                        </div>
                    </aside>
                {%- endif -%}

                {%- comment -%} Main Content Area {%- endcomment -%}
                <div class="lg:col-span-3">
                    {%- comment -%} Active Filters {%- endcomment -%}
                    {%- assign active_filters_count = 0 -%}
                    {%- for filter in collection.filters -%}
                        {%- if filter.active_values.size > 0 -%}
                            {%- assign active_filters_count = active_filters_count | plus: filter.active_values.size -%}
                        {%- endif -%}
                    {%- endfor -%}

                    {%- if active_filters_count > 0 -%}
                        <div class="mb-6 pb-4 border-b border-gray-200">
                            <div class="flex flex-wrap items-center gap-2">
                                <span class="text-sm font-medium text-gray-700">Active filters:</span>
                                {%- for filter in collection.filters -%}
                                    {%- for value in filter.active_values -%}
                                        <button
                                            @click="removeFilter('{{ filter.param_name }}', '{{ value.value }}')"
                                            type="button"
                                            class="inline-flex items-center gap-2 px-3 py-1 bg-blue-50 text-blue-700 text-sm rounded-full hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-400 transition-colors group"
                                        >
                                            <span>{{ value.label }}</span>
                                            <svg class="w-4 h-4 group-hover:text-blue-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                            </svg>
                                        </button>
                                    {%- endfor -%}
                                {%- endfor -%}
                                <button
                                    @click="clearAllFilters()"
                                    type="button"
                                    class="text-sm text-gray-500 hover:text-gray-700 underline focus:outline-none"
                                >
                                    Clear all
                                </button>
                            </div>
                        </div>
                    {%- endif -%}

                    {%- comment -%} Toolbar - Sort and Results Count {%- endcomment -%}
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8 pb-6 border-b border-gray-200">
                        <div class="text-sm text-gray-600">
                            {% if collection.products_count > 0 %}
                                Showing
                                <span class="font-medium text-gray-900">{{ paginate.current_offset | plus: 1 }}-{{ paginate.current_offset | plus: paginate.page_size | at_most: collection.products_count }}</span>
                                of
                                <span class="font-medium text-gray-900">{{ collection.products_count }}</span>
                                {% if collection.products_count == 1 %}product{% else %}products{% endif %}
                            {% else %}
                                No products found
                            {% endif %}
                        </div>

                        {%- if collection.products_count > 0 -%}
                            <div x-data="collectionSort()">
                                <label for="sort-by" class="sr-only">Sort by</label>
                                <select
                                    id="sort-by"
                                    x-model="sortBy"
                                    @change="updateSort()"
                                    class="px-4 py-2 pr-10 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-colors bg-white"
                                >
                                    {%- for option in collection.sort_options -%}
                                        <option value="{{ option.value }}" {% if option.value == collection.sort_by %}selected{% endif %}>
                                            {{ option.name }}
                                        </option>
                                    {%- endfor -%}
                                </select>
                            </div>
                        {%- endif -%}
                    </div>

                    {%- comment -%} Product Grid {%- endcomment -%}
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for prod in collection.products %}
                            {% render 'product-grid-item', prod: prod %}
                        {% endfor %}
                    </div>

                    {%- comment -%} Empty State {%- endcomment -%}
                    {%- if collection.products.size == 0 -%}
                        <div class="text-center py-12">
                            <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">No products found</h3>
                            <p class="text-gray-600 mb-6">Try adjusting your filters to find what you're looking for</p>
                            {%- if active_filters_count > 0 -%}
                                <button
                                    @click="clearAllFilters()"
                                    type="button"
                                    class="inline-flex items-center justify-center px-6 py-3 bg-gray-900 text-white font-medium rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors"
                                >
                                    Clear all filters
                                </button>
                            {%- endif -%}
                        </div>
                    {%- endif -%}

                    {% render 'pagination-navigation', paginate: paginate %}
                </div>
            </div>
        {% endpaginate %}
    </div>

    {%- comment -%} Mobile Filter Drawer {%- endcomment -%}
    {%- if collection.filters.size > 0 -%}
        <div
            x-show="mobileFiltersOpen"
            x-cloak
            @keydown.escape.window="mobileFiltersOpen = false"
            class="fixed inset-0 z-50 lg:hidden"
        >
            {%- comment -%} Backdrop {%- endcomment -%}
            <div
                x-show="mobileFiltersOpen"
                x-transition:enter="transition-opacity ease-out duration-200"
                x-transition:enter-start="opacity-0"
                x-transition:enter-end="opacity-100"
                x-transition:leave="transition-opacity ease-in duration-150"
                x-transition:leave-start="opacity-100"
                x-transition:leave-end="opacity-0"
                @click="mobileFiltersOpen = false"
                class="absolute inset-0 bg-black bg-opacity-50"
            ></div>

            {%- comment -%} Drawer {%- endcomment -%}
            <div
                x-show="mobileFiltersOpen"
                x-transition:enter="transition-transform ease-out duration-300"
                x-transition:enter-start="translate-x-full"
                x-transition:enter-end="translate-x-0"
                x-transition:leave="transition-transform ease-in duration-200"
                x-transition:leave-start="translate-x-0"
                x-transition:leave-end="translate-x-full"
                class="absolute right-0 top-0 bottom-0 w-full max-w-md bg-white shadow-xl overflow-y-auto"
            >
                <div class="sticky top-0 z-10 bg-white border-b border-gray-200 px-6 py-4">
                    <div class="flex items-center justify-between">
                        <h2 class="text-lg font-semibold text-gray-900">Filters</h2>
                        <button
                            @click="mobileFiltersOpen = false"
                            type="button"
                            class="p-2 -mr-2 text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-400 rounded-lg"
                        >
                            <span class="sr-only">Close filters</span>
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                </div>

                <div class="px-6 py-6">
                    {%- for filter in collection.filters -%}
                        <div class="mb-6 pb-6 border-b border-gray-200 last:border-b-0" x-data="{ expanded: true }">
                            <button
                                @click="expanded = !expanded"
                                type="button"
                                class="w-full flex items-center justify-between text-left py-2 text-sm font-medium text-gray-900 hover:text-gray-700 focus:outline-none"
                            >
                                <span>{{ filter.label }}</span>
                                <svg class="w-5 h-5 transition-transform duration-200" :class="{ 'rotate-180': expanded }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>

                            <div x-show="expanded" x-collapse>
                                <div class="mt-4 space-y-3">
                                    {%- case filter.type -%}
                                        {%- when 'list' -%}
                                            {%- for value in filter.values -%}
                                                <label class="flex items-center gap-3 cursor-pointer group">
                                                    <input
                                                        type="checkbox"
                                                        value="{{ value.value }}"
                                                        {% if value.active %}checked{% endif %}
                                                        @change="toggleFilter('{{ filter.param_name }}', '{{ value.value }}')"
                                                        class="w-4 h-4 text-blue-500 border-gray-300 rounded focus:ring-2 focus:ring-blue-400 focus:ring-offset-0 cursor-pointer"
                                                    >
                                                    <span class="text-sm text-gray-700 group-hover:text-gray-900">
                                                        {{ value.label }}
                                                        <span class="text-gray-500">({{ value.count }})</span>
                                                    </span>
                                                </label>
                                            {%- endfor -%}

                                        {%- when 'price_range' -%}
                                            <div class="space-y-3">
                                                <div>
                                                    <label for="filter-price-min-mobile-{{ filter.param_name }}" class="block text-xs text-gray-600 mb-1">Min Price</label>
                                                    <input
                                                        type="number"
                                                        id="filter-price-min-mobile-{{ filter.param_name }}"
                                                        min="0"
                                                        max="{{ filter.range_max | divided_by: 100 }}"
                                                        step="1"
                                                        value="{{ filter.min_value.value | divided_by: 100 }}"
                                                        @change="updatePriceFilter('{{ filter.param_name }}', 'min', $event.target.value)"
                                                        placeholder="0"
                                                        class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                                                    >
                                                </div>
                                                <div>
                                                    <label for="filter-price-max-mobile-{{ filter.param_name }}" class="block text-xs text-gray-600 mb-1">Max Price</label>
                                                    <input
                                                        type="number"
                                                        id="filter-price-max-mobile-{{ filter.param_name }}"
                                                        min="0"
                                                        max="{{ filter.range_max | divided_by: 100 }}"
                                                        step="1"
                                                        value="{{ filter.max_value.value | divided_by: 100 }}"
                                                        @change="updatePriceFilter('{{ filter.param_name }}', 'max', $event.target.value)"
                                                        placeholder="{{ filter.range_max | divided_by: 100 }}"
                                                        class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                                                    >
                                                </div>
                                            </div>
                                    {%- endcase -%}
                                </div>
                            </div>
                        </div>
                    {%- endfor -%}
                </div>

                <div class="sticky bottom-0 bg-white border-t border-gray-200 px-6 py-4">
                    <div class="flex gap-3">
                        <button
                            @click="clearAllFilters()"
                            type="button"
                            class="flex-1 px-6 py-3 bg-white text-gray-900 border border-gray-300 font-medium rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors"
                        >
                            Clear all
                        </button>
                        <button
                            @click="mobileFiltersOpen = false"
                            type="button"
                            class="flex-1 px-6 py-3 bg-gray-900 text-white font-medium rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors"
                        >
                            Apply filters
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {%- endif -%}
</div>

<script>
  document.addEventListener('alpine:init', () => {
    // Collection Sort Component
    Alpine.data('collectionSort', () => ({
      sortBy: '{{ collection.sort_by | default: collection.default_sort_by }}',

      updateSort() {
        const url = new URL(window.location.href)

        // Update or add sort_by parameter
        if (this.sortBy && this.sortBy !== '{{ collection.default_sort_by }}') {
          url.searchParams.set('sort_by', this.sortBy)
        } else {
          url.searchParams.delete('sort_by')
        }

        // Navigate to new URL
        window.location.href = url.toString()
      }
    }))

    // Collection Filters Component
    Alpine.data('collectionFilters', () => ({
      mobileFiltersOpen: false,
      activeFiltersCount: {{ active_filters_count | default: 0 }},

      init() {
        // Calculate active filters count from URL
        this.updateActiveFiltersCount()

        // Close mobile drawer on escape key
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.mobileFiltersOpen) {
            this.mobileFiltersOpen = false
          }
        })
      },

      updateActiveFiltersCount() {
        const url = new URL(window.location.href)
        let count = 0

        // Count filter parameters
        for (const [key, value] of url.searchParams) {
          if (key.startsWith('filter.')) {
            count++
          }
        }

        this.activeFiltersCount = count
      },

      toggleFilter(paramName, value) {
        const url = new URL(window.location.href)
        const currentValue = url.searchParams.get(paramName)

        if (currentValue === value) {
          // Remove filter if already applied
          url.searchParams.delete(paramName)
        } else {
          // Apply filter
          url.searchParams.set(paramName, value)
        }

        // Reset to page 1 when filtering
        url.searchParams.delete('page')

        // Navigate to new URL
        window.location.href = url.toString()
      },

      removeFilter(paramName, value) {
        const url = new URL(window.location.href)
        url.searchParams.delete(paramName)

        // Reset to page 1
        url.searchParams.delete('page')

        window.location.href = url.toString()
      },

      updatePriceFilter(paramName, type, value) {
        const url = new URL(window.location.href)

        // Construct filter parameter name (e.g., filter.v.price.gte or filter.v.price.lte)
        const filterParam = type === 'min' ? `${paramName}.gte` : `${paramName}.lte`

        if (value && parseFloat(value) > 0) {
          // Convert to cents for Shopify
          const cents = Math.round(parseFloat(value) * 100)
          url.searchParams.set(filterParam, cents)
        } else {
          url.searchParams.delete(filterParam)
        }

        // Reset to page 1
        url.searchParams.delete('page')

        // Navigate to new URL
        window.location.href = url.toString()
      },

      clearAllFilters() {
        const url = new URL(window.location.href)

        // Remove all filter parameters
        const paramsToDelete = []
        for (const [key] of url.searchParams) {
          if (key.startsWith('filter.')) {
            paramsToDelete.push(key)
          }
        }

        paramsToDelete.forEach(param => url.searchParams.delete(param))

        // Reset to page 1
        url.searchParams.delete('page')

        // Close mobile drawer
        this.mobileFiltersOpen = false

        // Navigate to new URL
        window.location.href = url.toString()
      }
    }))
  })
</script>
