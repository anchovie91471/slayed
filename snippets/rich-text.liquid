{%- liquid
  assign heading = section.settings.heading
  assign heading_size = section.settings.heading_size
  assign text = section.settings.text
  assign text_alignment = section.settings.text_alignment
  assign max_width = section.settings.max_width
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
  assign button_style = section.settings.button_style
  assign bg_color = section.settings.background_color

  # Text alignment classes
  case text_alignment
    when 'left'
      assign align_classes = 'text-left items-start'
    when 'center'
      assign align_classes = 'text-center items-center mx-auto'
  endcase
-%}

<section class="py-12 md:py-20" style="background-color: {{ bg_color }};">
  <div class="container mx-auto px-6 md:px-8">
    <div class="flex flex-col {{ align_classes }} gap-8" style="max-width: {{ max_width }}px;">
      {%- if heading != blank -%}
        <h2 class="{{ heading_size }} font-bold text-gray-900">
          {{ heading }}
        </h2>
      {%- endif -%}

      {%- if text != blank -%}
        <div class="prose prose-lg max-w-none
          {% if text_alignment == 'center' %}prose-headings:text-center prose-p:text-center{% endif %}
          prose-headings:text-gray-900 prose-headings:font-bold
          prose-p:text-gray-600 prose-p:leading-relaxed
          prose-a:text-blue-500 prose-a:no-underline hover:prose-a:underline
          prose-ul:text-gray-600 prose-ol:text-gray-600
          prose-strong:text-gray-900 prose-strong:font-semibold
        ">
          {{ text }}
        </div>
      {%- endif -%}

      {%- if button_text != blank -%}
        <div class="mt-2{% if text_alignment == 'center' %} mx-auto{% endif %}">
          {% render 'btn',
            text: button_text,
            type: button_style,
            url: button_link,
            size: 'large'
          %}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>
