<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    {% for collection in collections %}
        <div class="group">
            <a href="{{ collection.url }}" class="block focus:outline-none focus:ring-2 focus:ring-blue-400 rounded-lg">
                <div class="relative overflow-hidden rounded-lg bg-gray-100 aspect-square mb-3">
                    {% if collection.image %}
                        <img
                            src="{{ collection.image | image_url: width: 600 }}"
                            alt="{{ collection.title | escape }}"
                            loading="lazy"
                            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                        >
                    {% elsif collection.products.first and collection.products.first.featured_image %}
                        <img
                            src="{{ collection.products.first.featured_image | image_url: width: 600 }}"
                            alt="{{ collection.title | escape }}"
                            loading="lazy"
                            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                        >
                    {% else %}
                        <div class="w-full h-full flex items-center justify-center bg-gray-200">
                            <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                    {% endif %}
                </div>
                <h2 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors text-center">
                    {{ collection.title }}
                </h2>
                {% if collection.products_count > 0 %}
                    <p class="text-sm text-gray-500 text-center mt-1">
                        {{ collection.products_count }} {% if collection.products_count == 1 %}product{% else %}products{% endif %}
                    </p>
                {% endif %}
            </a>
        </div>
    {% endfor %}
</div>