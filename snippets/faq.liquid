{%- liquid
    assign heading_size = section.settings.heading_size | default: 'text-3xl'
-%}
<div class="px-6 md:px-8 py-12">
    <div class="container mx-auto max-w-3xl">
        <h1 class="{{ heading_size }} font-bold text-gray-900 text-center mb-8">
            {{ section.settings.heading }}
        </h1>
        <div class="space-y-4">
            {% for block in section.blocks %}
                <div
                        x-data="{ expanded: false }"
                        class="border border-gray-200 rounded-lg overflow-hidden"
                        x-id="['item-trigger', 'item-panel']">
                    <h3 class="m-0">
                        <button
                                type="button"
                                class="w-full text-left bg-transparent border-0 p-0 appearance-none flex items-center justify-between px-6 py-4 text-lg font-medium text-gray-900 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-400 transition-colors"
                                @click="expanded = !expanded"
                                :aria-controls="$id('item-panel')"
                                :aria-expanded="expanded">
                            <span>{{ block.settings.heading }}</span>
                            <span
                                    class="text-gray-500 transition-transform duration-200"
                                    :class="{ 'rotate-180': expanded }">
                                {% render 'icon-chevron' %}
                            </span>
                        </button>
                    </h3>
                    <div x-cloak x-show="expanded" x-collapse :id="$id('item-panel')">
                        <div class="px-6 py-4 text-gray-600 [&_a]:text-blue-500 [&_a:hover]:text-blue-600 [&_a:hover]:underline [&_a:focus]:outline-none [&_a:focus]:ring-2 [&_a:focus]:ring-blue-400">
                            {{ block.settings.body }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
