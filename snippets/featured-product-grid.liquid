<div class="px-6 md:px-8 py-12">
    {% if section.settings.featured_collection != blank %}
        <div class="container mx-auto">
            <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">{{ section.settings.heading | default: "Featured Products" }}</h2>
            {% assign featured_collection = section.settings.featured_collection %}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                {% for product in featured_collection.products %}
                    {% render 'product-grid-item', prod: product, is_first: forloop.first %}
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>
